pipeline{
    // agent {
    //     docker {
    //         image 'node:18' // Use Node.js official image
    //         args '--network=host -v /var/run/docker.sock:/var/run/docker.sock' // Run as root to avoid permission issues
    //     }
    // }

    agent any
    environment {
        DOCKER_HOST = "tcp://docker:2375"
        DOCKER_IMAGE = "soumya9641/jenkinstarter"
        CONTAINER_NAME = "jenkinstarter"
        PORT = "9000"
    }
    stages {
         stage('Checkout Code') {
            steps {
                git 'https://github.com/Soumya-9641/jenkinsStarter.git'  
            }
        } 
          stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }
        stage('Check Docker') {
            steps {
                sh 'docker version'
            }
        }
         stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t $DOCKER_IMAGE ."
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    withDockerRegistry([credentialsId: 'docker-hub-credentials', url: '']) {
                        sh "docker login -u soumya9641 -p Soumya@dockerhub"
                        sh "docker push $DOCKER_IMAGE"
                    }
                }
            }
        }
        stage('Deploy Container') {
            steps {
                sh """
                docker stop jenkinstarter || true
                docker rm jenkinstarter || true
                docker run -d -p 3000:3000 --name jenkinstarter $DOCKER_IMAGE:latest
                """
            }
        }
    }
     post {
        always {
            echo "CI/CD Pipeline Completed! Image pushed to Docker Hub."
        }
    }
}


